set $mod Mod4
set $alt Mod1
set $colors -nb '#222222' -nf '#eeeeee' -sb '#cba6f7' -sf '#000000' -fn 'Iosevka Nerd Font:regular:pixelsize=19'

font pango:IosevkaTerm Nerd Font 12.3

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

floating_modifier $mod
tiling_drag modifier titlebar

# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
exec_always --no-startup-id unclutter &

exec --no-startup-id copyq &
exec --no-startup-id flameshot &
exec --no-startup-id clipmenud &
exec_always --no-startup-id xset r rate 200 50
exec_always --no-startup-id setxkbmap -option caps:swapescape
exec_always --no-startup-id picom --config ~/.config/picom/picom.conf &
exec_always --no-startup-id redshift -P -O 5500

# start a terminal
bindsym $mod+Return exec alacritty
# bindsym $mod+b exec MOZ_ENABLE_WAYLAND=0 zen-browser
bindsym $mod+b exec brave
bindsym $mod+e exec nautilus
bindsym $mod+d exec discord
bindsym $mod+g exec chromium --app="https://duckduckgo.com/?q=DuckDuckGo%20AI%20Chat&ia=chat&duckai=1"
bindsym $mod+c exec brave --app="https://open.spotify.com"
bindsym $mod+ctrl+space exec --no-startup-id rofimoji

# screenshots
bindsym Print exec flameshot gui
bindsym $mod+Print exec --no-startup-id flameshot full -p ~/Pictures/screenshots/ -c

# clipboard
# bindsym $mod+v exec CM_LAUNCHER=rofi clipmenu -l 10 $colors
bindsym $mod+v exec copyq toggle
bindsym $mod+shift+v exec clipmenu -l 10 $colors

# application launcher
bindsym $mod+space exec "rofi -modi drun,run -show drun"
bindsym $mod+$alt+space exec --no-startup-id dmenu_run $colors

# sleep & lock
bindsym $mod+$alt+l exec --no-startup-id systemctl sleep && i3lock --image $HOME/Pictures/walls/mountain.jpg
bindsym $mod+shift+l exec --no-startup-id xset s off -dpms && i3lock --color 000000

# kill focused window
bindsym $mod+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Tab focus right
bindsym $mod+shift+Tab focus left

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+$alt+Left move left
bindsym $mod+$alt+Down move down
bindsym $mod+$alt+Up move up
bindsym $mod+$alt+Right move right

# move focused window
bindsym $mod+ctrl+Left move left
bindsym $mod+ctrl+Down move down
bindsym $mod+ctrl+Up move up
bindsym $mod+ctrl+Right move right

# move focused window
bindsym $mod+ctrl+h move left
bindsym $mod+ctrl+j move down
bindsym $mod+ctrl+k move up
bindsym $mod+ctrl+l move right

# fullscreen
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+m layout toggle tabbed split
bindsym $mod+$alt+m floating toggle
bindsym $mod+shift+m focus mode_toggle

# workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+u workspace number $ws1
bindsym $mod+i workspace number $ws2
bindsym $mod+o workspace number $ws3
bindsym $mod+p workspace number $ws4
bindsym $mod+y workspace number $ws5
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

mode "resize" {
		bindsym l resize shrink width 10 px or 10 ppt
		bindsym j resize grow height 10 px or 10 ppt
		bindsym k resize shrink height 10 px or 10 ppt
		bindsym h resize grow width 10 px or 10 ppt

		bindsym Left resize shrink width 10 px or 10 ppt
		bindsym Down resize grow height 10 px or 10 ppt
		bindsym Up resize shrink height 10 px or 10 ppt
		bindsym Right resize grow width 10 px or 10 ppt

		bindsym Return mode "default"
		bindsym Escape mode "default"
		bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

bar {
	status_command i3status -c ~/.config/i3/i3status.conf
}

# remove title
for_window [class="^.*"] border pixel 3
# for_window [class="^.*"] client.focused          #77dd77 #285577 #ffffff #2e9ef4   #285577
for_window [class="copyq"] floating enable
for_window [class="copyq"] resize set 1000 600
for_window [class="copyq"] move position center



